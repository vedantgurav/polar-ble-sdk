<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recording_live_data_header"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="Header" />

    <LinearLayout
        android:id="@+id/recording_live_settings_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/recording_live_settings_sampleRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="SampleRate"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/recording_live_sampleRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/white"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recording_live_settings_resolution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Resolution"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/recording_live_resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/white"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recording_live_settings_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Range"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/recording_live_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/white"
                tools:text="100" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recording_live_settings_channels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Channels"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/recording_live_channels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/white"
                tools:text="100" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meas_sampleRate_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Measured sampleRate (Hz): "
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/meas_sampleRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/meas_SampleRateWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_warning"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/meas_SampleRateWarningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            tools:text="samples lost"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/meas_range_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="range"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/meas_range_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/meas_range_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/data_0_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="x"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_1_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="y"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_2_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="z"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_3_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="z"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/data_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="100"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/recording_live_data_stream_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Possible error is visible here."
        tools:visibility="visible" />

    <View
        android:id="@+id/settings_bottom_divider"
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>